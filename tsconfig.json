{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": true,
        "strictNullChecks": true,
        "outFile": "./src/index.js",
        "types": [
            "react",
            "react-dom"
        ]
    },
    "include": [
        "./src/*",
        "./demo/*"
    ],
    "exclude": [
		"node_modules",
		"./dist"
	]
}